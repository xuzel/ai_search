# AI Search Engine - Environment Variables Template
# Copy this file to .env and fill in your API keys

# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Search & Tools
SERPAPI_API_KEY=your_serpapi_api_key_here
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key_here
OPENROUTESERVICE_API_KEY=your_openrouteservice_api_key_here

# Web Server
WEB_HOST=0.0.0.0
WEB_PORT=8000
CORS_ORIGINS=*

# Security
CODE_EXECUTION_SECURITY_LEVEL=MODERATE
CODE_EXECUTION_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=memory://  # or redis://localhost:6379 for production

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=  # Optional: path to log file (e.g., logs/app.log)
LOG_FORMAT=standard  # 'standard', 'detailed' (includes file/line), or 'json' (structured)
